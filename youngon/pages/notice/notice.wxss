.notice-box {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.notice-search {
  height: 120rpx;
  background: #3aafec;
}
.notice-search-box {
  width: 80%;
}
.notice-soso_logo {
  height: 70rpx;
  width: 70rpx;
  background: white;
  border-top-left-radius: 6rpx;
  border-bottom-left-radius: 6rpx;
}
.notice-soso_input {
  height: 70rpx;
  flex: 1;
}
.notice-soso_back {
  width: 70rpx;
  background: white;
  height: 70rpx;
  border-top-right-radius: 6rpx;
  border-bottom-right-radius: 6rpx;
}
.notice-input {
  width: 100%;
  height: 70rpx;
  background: white;
}
.notice-hold {
  color: rgba(0, 0, 0, 0.4);
  font-size: 28rpx;
}
.list-box {
  min-height: 150rpx;
}
.list-box_img {
  height: 150rpx;
  width: 250rpx;
  box-sizing: border-box;
  padding: 10rpx;
}
.img {
  height: 100%;
  width: 100%
}
.list-box_box {
  flex: 1;
  box-sizing: border-box;
  padding: 10rpx;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  padding-right: 20rpx;
}
.list-box_box_title {
  font-size: 34rpx;
  width: 100%
}
.list-box_box_author {
  font-size: 26rpx;
  display: flex;
  justify-content: space-between;
  width: 100%
}
.notice-body {
  flex: 1;
}