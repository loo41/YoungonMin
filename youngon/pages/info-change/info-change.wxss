.user-box {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  background: white;
}
.user-header {
  height: 300rpx;
  width: 100%;
}
.user-img {
  height: 50rpx; 
  width: 50rpx;
  border-radius: 50%;
  overflow: hidden;
  background: #EFEFF4;
}
.info-body {
  flex: 1;
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
}
.user-input {
  background: #EFEFF4;
}
.input-box {
  min-height: 100rpx;
  border-bottom: 1px solid #3aafec;
  background: #EFEFF4;
  display: flex;
}
.clounm-name {
  width: 20%;
  box-sizing: border-box;
  padding: 10rpx;
  font-size: 36rpx;
  display: flex;
  justify-content: flex-start;
}
.clounm-value {
  flex: 1;
  justify-content: flex-start;
}
.user-input {
  width: 80%;
  height: 70%;
}
.radio {
  width: 25%;
  font-size: 28rpx;
}
.sub-but {
  background: #3aafec!important;
  color: white!important;
  border: 0px solid #3aafec!important;
  border-radius: 0rpx!important;
}