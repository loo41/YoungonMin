.chat-box {
  height: 100%;
  box-sizing: border-box;
  padding-top: 80rpx;
  padding-bottom: 120rpx;
}
.chat-header {
  position: fixed;
  top: 0;
  right: 0;
  height: 80rpx;
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  background-color: #3aafec;
  color: white;
  left: 0;
}
.chat-header text {
  margin-right: 10rpx;
}
.chat-body {
  height: 100%;
  background: white;
}
.chat-bottom {
  height: 120rpx;
  display: flex;
  justify-content: center;
  background-color: #3aafec;
  align-items: center;
  position: fixed;
  box-sizing: border-box;
  bottom: 0rpx;
  left: 0;
  right: 0;
}
.chat-bottom-child {
  height: 70rpx;
  display: flex;
  padding: 0 20rpx;
  width: 100%;
  justify-content: space-between;
  align-items: center;
}
.chat-bottom-child view:nth-child(1) {
  width: 60%;
  border-radius: 10rpx;
  overflow: hidden;
}
.chat-bottom-child view:nth-child(2) {
  width: 30%;
  height: 100%;
  border-radius: 10rpx;
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: white;
}
.notice-input {
  width: 100%;
  height: 70rpx;
  background: white;
}
.notice-hold {
  color: rgba(0, 0, 0, 0.4);
  font-size: 28rpx;
}
.message-box {
  height: 140rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.message-header {
  width: 20%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.message-mes {
  flex: 1;
  justify-content: flex-start;
  align-items: flex-start;
  padding-left: 20rpx;
  font-size: 28rpx;
}


/*提示*/
.display-user {
  height: 120rpx;
  width: 100%;
  position: absolute;
  background: rgba(0, 0, 0, 0.3);
  color: white;
  top: 5%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.display-user view:nth-child(1) {
  height: 100rpx;
  width: 20%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.display-user view:nth-child(2) {
  flex: 1;
  font-size: 32rpx;
  display: flex;
  justify-content: flex-start;
}