.share-box {
  height: 100%;
  width: 100%;
  position: absolute;
  top: 0;
  background: rgba(0, 0, 0, 0.6);
  left: 0;
}
.share {
  height: 50%;
  width: 80%;
  background: white;
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.share-happly {
  font-size: 24rpx;
}
.share-but {
  display: flex;
  flex: 1
}
.sign-application {
  width: 100%;
  height: 80rpx;
  background: #3aafec!important;
  color: white!important;
  display: flex;
  justify-content: center;
  align-items: center;
}